<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="planning_role_view_form" model="ir.ui.view">
        <field name="name">planning.role.view.form</field>
        <field name="model">planning.role</field>
        <field name="inherit_id" ref="planning.planning_role_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_ids']" position="after">
                <field name="vehicle_id"/>
            </xpath>
        </field>
    </record>

    <record id="planning_role_view_tree" model="ir.ui.view">
        <field name="name">planning.role.view.tree</field>
        <field name="model">planning.role</field>
        <field name="inherit_id" ref="planning.planning_role_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_ids']" position="after">
                <field name="vehicle_id"/>
            </xpath>
        </field>
    </record>

</odoo>
