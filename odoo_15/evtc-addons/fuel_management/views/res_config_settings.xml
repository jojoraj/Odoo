<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.fleet.card.fuel</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="92" />
    <field name="inherit_id" ref="fleet.res_config_settings_view_form" />
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside">
        <div class="app_settings_block" data-string="Fleet" id="fleet" string="Fleet" data-key="fleet">
          <h2>Ecart de volumétrie carburant</h2>
          <div class="row mt16 o_settings_container" id="fleet_card_fuel">
            <div class="col-12 col-lg-6 o_setting_box" id="">
              <div class="o_setting_left_pane" />
              <div class="o_setting_right_pane">
                <span class="o_form_label">Nombre d'écart accepté</span>
                <div class="text-muted">
                  <field name="gap_alert" />
                </div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
