<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="flow_moov_barrier_tree_view" model="ir.ui.view">
            <field name="name">flow.moov.barrier.tree.view</field>
            <field name="model">flow.moov</field>
            <field name="arch" type="xml">
              <tree editable="bottom">
                <field name="sanitary_barrier_id"/>
                <field name="fleet_vehicle_id" domain="[('tag_ids.name', '=', 'vehicle')]"/>
                <field name="passenger_ids">
                  <tree editable="bottom">
                    <field name="name"/>
                    <field name="x_studio_cin"/>
                    <field name="phone"/>
                  </tree>
                </field>
                <field name="moov"/>
                <field name="time"/>
              </tree>
            </field>
        </record>

        <record id="flow_moov_barrier_form_view" model="ir.ui.view">
            <field name="name">flow.moov.barrier.from.view</field>
            <field name="model">flow.moov</field>
            <field name="arch" type="xml">
              <form>
                <sheet>
                  <div>
                    <group>
                      <field name="origin"/>
                      <field name="destination"/>
                    </group>
                    <group>
                        <field name="total_passenger"/>
                    </group>
                    <group>
                      <field name="fleet_vehicle_id" placeholder="fleet_vehicle" domain="[('tag_ids.name', '=', 'vehicle')]"/>
                    </group>
                    <group>
                      <div>
                        <label for="moov" string="Moov"/>
                        <field name="moov" widget="selection"/>
                      </div>
                      <div>
                        <label for="time" string="Time"/>
                        <field name="time"/>
                      </div>
                    </group>
                  </div>
                  <notebook>
                    <page name="passenger" string="Passenger" groups="base.group_user">
                      <field name="passenger_ids">
                        <tree editable="bottom">
                          <field name="name"/>
                          <field name="x_studio_cin"/>
                          <field name="phone"/>
                        </tree>
                      </field>
                    </page>
                  </notebook>
                </sheet>
              </form>
            </field>
          </record>
    </data>
</odoo>
