<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <data>
      <record id='fleet_vehicle_action' model='ir.actions.act_window'>
        <field name="name">Bateau</field>
        <field name="res_model">fleet.vehicle</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="context" eval="{'default_tag_ids': [ref('cholera_boat.boat_vehicle_tag')]}" />
        <field name="domain" eval="[('tag_ids', 'in', [ref('cholera_boat.boat_vehicle_tag')])]" />
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new vehicle
          </p><p>
            Manage your fleet by keeping track of the contracts, services, odometers and fuel logs associated to each vehicle.
          </p>
        </field>
    </record>

    <record id="fleet_vehicle_form_inherit_id" model="ir.ui.view">
        <field name="name">fleet.vehicle.form</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_assignation_logs']" position="before">
                <button name="flux_action" type="object" class="oe_stat_button" icon="fa-exchange">
                    Flux
			    </button>
            </xpath>
            <xpath expr="//div[2]" position="after">
                <div>
                    <group attrs="{'invisible': [('is_boat', '=', False)]}">
                        <field name="passenger_number"/>
                        <field name="merchandise_type"/>
                    </group>
                </div>
            </xpath>
            <xpath expr="//field[@name='model_id']" position="attributes">
                <field name="model_id" attrs="{'invisible': [('is_boat', '=', False)]}"/>
            </xpath>
            <xpath expr="//group[2]/group[2]" position="after">
                <notebook attrs="{'invisible': [('is_boat', '=', False)]}">
                    <page string="Equipage">
                        <group>
                            <field name="crew"/>
                            <field name="native_country"/>
                            <field name="nationality"/>
                            <field name="tel_number"/>
                            <field name="mail_address"/>
                        </group>
                    </page>
                </notebook>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="is_boat" invisible="True"/>
                <field name="is_double" invisible="True"/>
            </xpath >

        </field>
    </record>
      <menuitem id="boat_menu" action="fleet_vehicle_action" name="Bateau" parent="fleet.menu_root" sequence="50" />
  </data>
</odoo>
