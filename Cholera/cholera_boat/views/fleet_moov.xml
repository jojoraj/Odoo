<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="fleet_moov_view_inherit" model="ir.ui.view">
            <field name="name">fleet.moov.form.inherit</field>
            <field name="model">fleet.moov</field>
            <field name="inherit_id" ref="cholera_sanitary_barrier.fleet_moov_barrier_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sanitary_barrier_id']" position="before">
                    <group>
                        <field name="origin"/>
                        <field name="destination"/>
                        <field name="total_passenger"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
